# Contracts environment
# Copy to .env and fill in values. NEVER commit .env!

# Polygon Mainnet RPC (use Alchemy, Infura, or QuickNode)
POLYGON_RPC_URL=https://polygon-rpc.com

# Deployer private key - LOCAL ONLY, NEVER COMMIT
# Export from MetaMask or use a hardware wallet
DEPLOYER_PRIVATE_KEY=

# Polygonscan API key for contract verification (free at polygonscan.com)
POLYGONSCAN_API_KEY=

# Native USDC on Polygon PoS
USDC_ADDRESS=0x3c499c542cEF5E3811e1192ce70d8cC03d5c3359

# Safety guard - must be "yes" to deploy to mainnet
CONFIRM_MAINNET=no
